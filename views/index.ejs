<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Team Form</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <div class="loaderContainer">
        <span class="loader"></span>
        <span class="loader-bar"></span>
      </div>

      <h1>Add a New Team Member</h1>
      <form id="form">
        <div class="form-grid">
          <!-- Personal Data Section -->
          <div class="section personal-data">
            <h2>Personal Data</h2>
            <label for="name">Name:</label>
            <input required type="text" id="name" name="name" />

            <label for="role">Role:</label>
            <input required type="text" id="role" name="role" />

            <label for="bio">Bio:</label>
            <textarea id="bio" name="bio"></textarea>
          </div>

          <!-- Social Links Section -->
          <div class="section social-links">
            <h2>Social Links</h2>
            <label for="github">GitHub:</label>
            <input
              required
              type="text"
              id="github"
              name="socialLinks[github]"
            />

            <label for="linkedin">LinkedIn:</label>
            <input
              required
              type="text"
              id="linkedin"
              name="socialLinks[linkedin]"
            />

            <label for="twitter">Twitter:</label>
            <input
              required
              type="text"
              id="twitter"
              name="socialLinks[twitter]"
            />

            <label for="email">Email:</label>
            <input required type="email" id="email" name="socialLinks[email]" />

            <label for="portfolio">Portfolio:</label>
            <input
              required
              type="text"
              id="portfolio"
              name="socialLinks[portfolio]"
            />
          </div>

          <!-- Other Data Section -->
          <div class="section other-data">
            <h2>Other Data</h2>
            <label for="imgUrl">Profile Image:</label>
            <input required type="file" id="imgUrl" name="imgUrl" />

            <label for="skills">Skills (comma-separated):</label>
            <input required type="text" id="skills" name="skills" />

            <label for="performanceRating">Performance Rating (1 to 5):</label>
            <input
              required
              type="number"
              id="performanceRating"
              name="performanceRating"
              min="1"
              max="10"
            />

            <button type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>

    <script>
      document
        .getElementById("form")
        .addEventListener("submit", async (event) => {
          event.preventDefault();

          const form = document.getElementById("form");
          const loaderContainer = document.querySelector(".loaderContainer");
          const container = document.querySelector(".container");

          const showLoader = () => {
            loaderContainer.style.display = "flex";
            container.style.opacity = "0.5";
          };

          const hideLoader = () => {
            loaderContainer.style.display = "none";
            container.style.opacity = "1";
          };

          showLoader();

          const formData = new FormData(form);

          await ("/team",
          {
            method: "POST",
            body: formData,
          })
            .then((response) => response.json())
            .then((data) => {
              console.log("Success:", data);
              alert("Team member added successfully!");
            })
            .catch((error) => {
              console.error("Error:", error);
              alert(
                "There was an error submitting the form. Please try again."
              );
            })
            .finally(() => {
              hideLoader();
            });
        });

      document.querySelector(".loaderContainer").style.display = "none";
    </script>
  </body>
</html>
